<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end|top">

    <!--Join Rewards screen-->
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_brave_rewards_panel"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bat_panel_gradient">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center">

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@drawable/bat_outline"
                tools:ignore="ContentDescription"/>

            <GridLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="25dp"
                android:columnCount="1">

                <TextView
                    android:id="@+id/get_ready_id"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/brave_ui_welcome_header_two"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:alpha=".5"
                    android:layout_row="0"/>

                <ImageView
                    android:layout_height="80dp"
                    android:layout_width="110dp"
                    android:src="@drawable/bat_icon"
                    android:layout_row="1"
                    android:layout_gravity="center"
                    tools:ignore="ContentDescription"/>

                <TextView
                    android:id="@+id/brave_rewards_id"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/brave_rewards_message"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:textSize="28sp"
                    android:textColor="#FFFFFF"
                    android:layout_row="2"/>

                <TextView
                    android:id="@+id/get_paid_id"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_margin="15dp"
                    android:text="@string/brave_ui_welcome_desc_two"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:alpha=".5"
                    android:layout_row="3"/>

                <Button
                    android:id="@+id/join_rewards_id"
                    android:layout_height="50dp"
                    android:layout_width="fill_parent"
                    android:layout_marginBottom="19dp"
                    android:background="@drawable/rewards_button"
                    android:text="@string/brave_ui_welcome_button_text_two"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:layout_row="4"
                    android:alpha=".5"/>

                <TextView
                    android:id="@+id/learn_more_id"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/brave_ui_welcome_footer_text_two"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:textSize="12sp"
                    android:textColor="#73CBFF"
                    android:clickable="true"
                    android:layout_row="5"/>
            </GridLayout>
        </RelativeLayout>
    </ScrollView>


    <!--Your wallet screen-->
    <ScrollView
        android:id="@+id/sv_no_website"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/br_central_layout"
            android:layout_width="wrap_content"
            android:layout_height="530dp"
            android:orientation="vertical"
            android:background="#e9ebff">

            <LinearLayout
                android:id="@+id/header_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/header">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="top|center">

                    <GridLayout
                        android:id="@+id/wallet_info_gridlayout"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        android:columnCount="2">

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_gravity="start|top"
                            android:text="@string/brave_ui_your_wallet"
                            android:fontFamily="sans-serif"
                            android:gravity="start"
                            android:textSize="16sp"
                            android:textColor="#FFFFFF"
                            android:alpha=".5"
                            android:layout_row="0"
                            android:layout_columnSpan="2"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_row="1"
                            android:layout_columnSpan="2">

                            <GridLayout
                                android:layout_height="wrap_content"
                                android:layout_width="fill_parent"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:columnCount="2">

                                <TextView
                                    android:id="@+id/br_bat_wallet"
                                    android:layout_height="wrap_content"
                                    android:layout_width="fill_parent"
                                    android:text=""
                                    android:layout_gravity="end"
                                    android:fontFamily="sans-serif"
                                    android:textSize="28sp"
                                    android:textColor="#FFFFFF"
                                    android:layout_row="0"
                                    android:layout_column="0"/>
                                <TextView
                                    android:id="@+id/br_bat"
                                    android:layout_height="wrap_content"
                                    android:layout_width="fill_parent"
                                    android:text="@string/brave_ui_bat"
                                    android:layout_gravity="start"
                                    android:textSize="18sp"
                                    android:layout_marginStart="5dp"
                                    android:textColor="#FFFFFF"
                                    android:alpha=".5"
                                    android:layout_row="0"
                                    android:layout_column="1"/>

                            </GridLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/br_usd_wallet"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="@string/brave_ui_usd"
                            android:layout_gravity="top|center"
                            android:fontFamily="sans-serif"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:alpha=".5"
                            android:layout_row="2"
                            android:layout_columnSpan="2"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:layout_gravity="top|center"
                            android:orientation="vertical"
                            android:layout_row="3"
                            android:layout_columnSpan="2">

                            <Button
                                android:id="@+id/grants_dropdown"
                                android:layout_height="25dp"
                                android:layout_width="wrap_content"
                                android:background="@drawable/rewards_button"
                                android:text="@string/brave_ui_grants"
                                android:fontFamily="sans-serif"
                                android:textSize="8sp"
                                android:textColor="#FFFFFF"
                                android:visibility="gone"
                                android:alpha=".5"/>

                            <ListView 
                                 android:id="@+id/grants_listview" 
                                 android:layout_height="wrap_content"
                                 android:layout_width="fill_parent"
                                 android:layout_marginBottom="-15dp"
                                 android:divider="@null"
                                 android:dividerHeight="0dp"
                                 android:visibility="gone" />

                            <GridLayout
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:columnCount="2">

                                <Button
                                    android:id="@+id/br_add_funds"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:background="@drawable/rewards_image_button"
                                    android:text="@string/brave_rewards_local_panel_add_funds"
                                    android:layout_gravity="end"
                                    android:fontFamily="sans-serif"
                                    android:textSize="12sp"
                                    android:textColor="#FFFFFF"
                                    android:drawableStart="@drawable/add_funds"
                                    android:drawablePadding="5sp"
                                    android:layout_row="0"
                                    android:layout_column="0"/>

                                <Button
                                    android:id="@+id/br_rewards_settings"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:background="@drawable/rewards_image_button"
                                    android:text="@string/brave_ui_settings"
                                    android:layout_gravity="end"
                                    android:fontFamily="sans-serif"
                                    android:textSize="12sp"
                                    android:textColor="#FFFFFF"
                                    android:drawableStart="@drawable/rewards_settings"
                                    android:drawablePadding="5sp"
                                    android:layout_row="0"
                                    android:layout_column="1"/>

                                </GridLayout>


                        </LinearLayout>

                    </GridLayout>

                    <LinearLayout
                        android:id="@+id/notification_info_layout"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/br_notification_close"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text=""
                            android:layout_gravity="top|end"
                            android:clickable="true"
                            android:drawableStart="@drawable/icon_close_notification"/>

                        <ImageView
                            android:id="@+id/br_notification_icon"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:src="@drawable/grant_icon"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_gravity="center"
                            tools:ignore="ContentDescription"/>

                        <TextView
                            android:id="@+id/br_notification_description"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text=""
                            android:gravity="center"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="5dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"/>

                        <Button
                            android:id="@+id/br_claim_button"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_height="40dp"
                            android:layout_width="wrap_content"
                            android:background="@drawable/rewards_button_orange"
                            android:text="@string/brave_ui_claim"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"/>

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <!--Layout when we are on a valid webpage-->
            <LinearLayout
                android:id="@+id/website_summary"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#FFFFFF"
                android:orientation="vertical" >

                <GridLayout
                    android:id="@+id/website_summary_grid"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="25dp"
                    android:columnCount="2"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_row="0"
                        android:layout_columnSpan="2"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content">

                            <ImageView
                                android:id="@+id/publisher_favicon"
                                android:layout_height="60dp"
                                android:layout_width="60dp"
                                android:contentDescription="@null"/>

                            <LinearLayout
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:layout_marginStart="2dp"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/publisher_name"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:layout_gravity="start|center"
                                    android:text=""
                                    android:fontFamily="sans-serif"
                                    android:gravity="start"
                                    android:ellipsize="end" 
                                    android:maxLines="2"
                                    android:textSize="16sp"/>

                                <TextView
                                    android:id="@+id/publisher_verified"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:layout_gravity="start|center"
                                    android:text="@string/brave_ui_verified_publisher"
                                    android:drawableStart="@drawable/icn_verify"
                                    android:fontFamily="sans-serif"
                                    android:gravity="start"
                                    android:textSize="14sp"
                                    android:visibility="gone"/>

                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/publisher_not_verified"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="2dp"
                            android:padding="5dp"
                            android:text="@string/brave_ui_not_verified_publisher_description"
                            android:fontFamily="sans-serif"
                            android:gravity="start"
                            android:textSize="12sp"
                            android:background="@drawable/brave_rewards_not_verified_rectangle"
                            android:visibility="gone"/>

                    </LinearLayout>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="start|center"
                        android:layout_marginStart="10dp"
                        android:text="@string/brave_ui_attention"
                        android:fontFamily="sans-serif"
                        android:gravity="start"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_row="1"
                        android:layout_column="0"/>

                    <TextView
                        android:id="@+id/publisher_attention"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="end|center"
                        android:layout_marginEnd="10dp"
                        android:text=""
                        android:fontFamily="sans-serif"
                        android:gravity="start"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_row="1"
                        android:layout_column="1"/>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="#c0c0c0"
                        android:layout_row="2"
                        android:layout_columnSpan="2"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="start|center"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:text="@string/brave_ui_auto_contribute"
                        android:fontFamily="sans-serif"
                        android:gravity="start"
                        android:textSize="14sp"
                        android:layout_row="3"
                        android:layout_column="0"/>

                    <Switch
                        android:id="@+id/brave_ui_auto_contribute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:switchMinWidth="56dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:theme="@style/BraveRewardsSwitchTheme"
                        android:gravity="start"
                        android:layout_gravity="end|center"
                        android:layout_row="3"
                        android:layout_column="1" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="#c0c0c0"
                        android:layout_row="4"
                        android:layout_columnSpan="2"/>

                    <Button
                        android:id="@+id/send_a_tip"
                        android:layout_height="50dp"
                        android:layout_width="fill_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/rewards_button_purple_border"
                        android:text="@string/brave_ui_send_a_tip"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif"
                        android:textSize="14sp"
                        android:textColor="#392DD1"
                        android:layout_row="4"
                        android:layout_columnSpan="2"
                        android:alpha=".5"/>

                </GridLayout>

                <Button
                    android:id="@+id/rewards_summary"
                    android:layout_height="50dp"
                    android:layout_width="fill_parent"
                    android:background="#e9ebff"
                    android:text="@string/brave_ui_rewards_summary"
                    android:gravity="start|center"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:textSize="14sp"
                    android:textColor="#4c54d2"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/bat_rewards_summary_gradient"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/br_no_activities_yet"
                        android:layout_height="100dp"
                        android:layout_width="wrap_content"
                        android:text="@string/brave_ui_no_activities"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:alpha=".5"/>

                    <GridLayout
                        android:id="@+id/br_activities"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="25dp"
                        android:columnCount="3"
                        android:visibility="gone">

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_gravity="start|center"
                            android:layout_marginStart="10dp"
                            android:text="@string/brave_ui_token_grant"
                            android:fontFamily="sans-serif"
                            android:gravity="start"
                            android:textSize="14sp"
                            android:layout_row="0"
                            android:layout_column="0"/>

                        <TextView
                            android:id="@+id/br_grants_claimed_bat"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginStart="20dp"
                            android:text=""
                            android:fontFamily="sans-serif"
                            android:gravity="end"
                            android:textSize="14sp"
                            android:layout_row="0"
                            android:layout_column="1"/>

                        <TextView
                            android:id="@+id/br_grants_claimed_usd"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginStart="10dp"
                            android:text=""
                            android:fontFamily="sans-serif"
                            android:gravity="end"
                            android:textSize="12sp"
                            android:layout_row="0"
                            android:layout_column="2"/>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginStart="10dp"
                            android:background="#c0c0c0"
                            android:layout_row="1"
                            android:layout_columnSpan="3"/>

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_gravity="start|center"
                            android:layout_marginTop="14dp"
                            android:layout_marginStart="10dp"
                            android:text="@string/brave_ui_earnings_ads"
                            android:fontFamily="sans-serif"
                            android:gravity="start"
                            android:textSize="14sp"
                            android:layout_row="2"
                            android:layout_column="0"/>

                        <TextView
                            android:id="@+id/br_earnings_ads_bat"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="14dp"
                            android:layout_marginStart="20dp"
                            android:text=""
                            android:fontFamily="sans-serif"
                            android:gravity="end"
                            android:textSize="14sp"
                            android:layout_row="2"
                            android:layout_column="1"/>

                        <TextView
                            android:id="@+id/br_earnings_ads_usd"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="14dp"
                            android:layout_marginStart="10dp"
                            android:text=""
                            android:fontFamily="sans-serif"
                            android:gravity="end"
                            android:textSize="12sp"
                            android:layout_row="2"
                            android:layout_column="2"/>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginStart="10dp"
                            android:background="#c0c0c0"
                            android:layout_row="3"
                            android:layout_columnSpan="3"/>

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_gravity="start|center"
                            android:layout_marginTop="14dp"
                            android:layout_marginStart="10dp"
                            android:text="@string/brave_ui_rewards_contribute"
                            android:fontFamily="sans-serif"
                            android:gravity="start"
                            android:textSize="14sp"
                            android:layout_row="4"
                            android:layout_column="0"/>

                        <TextView
                            android:id="@+id/br_auto_contribute_bat"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="14dp"
                            android:layout_marginStart="20dp"
                            android:text=""
                            android:fontFamily="sans-serif"
                            android:gravity="end"
                            android:textSize="14sp"
                            android:layout_row="4"
                            android:layout_column="1"/>

                        <TextView
                            android:id="@+id/br_auto_contribute_usd"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="14dp"
                            android:layout_marginStart="10dp"
                            android:text=""
                            android:fontFamily="sans-serif"
                            android:gravity="end"
                            android:textSize="12sp"
                            android:layout_row="4"
                            android:layout_column="2"/>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginStart="10dp"
                            android:background="#c0c0c0"
                            android:layout_row="5"
                            android:layout_columnSpan="3"/>

                        <!--One-Time Tips-->
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_gravity="start|center"
                            android:layout_marginTop="14dp"
                            android:layout_marginStart="10dp"
                            android:text="@string/brave_ui_one_time_donation"
                            android:fontFamily="sans-serif"
                            android:gravity="start"
                            android:textSize="14sp"
                            android:layout_row="6"
                            android:layout_column="0"/>

                        <TextView
                            android:id="@+id/br_one_time_donation_bat"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="14dp"
